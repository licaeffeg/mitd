% Definizione del template della pagina del titolo
\setbeamertemplate{title page}{%
  \begin{tikzpicture}[remember picture,overlay]
    % Inserisci l'immagine di sfondo con trasparenza
    \node[opacity=0.5] at (current page.center) {\includegraphics[width=\paperwidth,height=\paperheight]{images/bg-img.png}};
    % Inserisci il titolo, l'autore e la data al centro della pagina
    \fontsize{20pt}{11pt}\selectfont
    \node[font=\bfseries,text=myred,opacity=1.0] at (current page.center) {
      \begin{minipage}[b][\paperheight]{\textwidth}
        \centering
        \vfill
        \usebeamerfont{title}\inserttitle\par
        \vspace{0.5cm} % Aggiungi spazio verticale tra il titolo e il sottotitolo
        \usebeamerfont{subtitle}\insertsubtitle\par % Inserisci il sottotitolo
        \vspace{1.5cm}
        \usebeamerfont{author}\insertauthor\par
        \vfill
        \vfill
      \end{minipage}
    };
  \end{tikzpicture}
}


